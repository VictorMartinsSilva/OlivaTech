@model OlivaTech.Site.Models.CursoTipo

@{
    ViewData["Title"] = "Delete";
}

<div class="card-internal col-7 shadow card-center">
    <div class="card-title-internal">
        <h2>Curso</h2>
    </div>
    <dl class="row">
        <dt class="text-oliva col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    <div class="text-center mb-3">
        <form asp-action="Delete">
            <input type="hidden" asp-for="CursoTipoId" />
            <input class="btn btn-outline-oliva" type="submit" value="Excluir" /> 
            <a class="btn btn-outline-oliva" asp-action="Index">Voltar</a>
        </form>
    </div>
</div>
