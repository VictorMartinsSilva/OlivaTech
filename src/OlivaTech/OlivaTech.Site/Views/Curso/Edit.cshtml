@model OlivaTech.Site.Models.Curso

@{
    ViewData["Title"] = "Editar Curso";
}

<div class="card-internal col-4 shadow">
    <div class="card-title-internal">
    <h2>Curso</h2>
    </div>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CursoId" />
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Cidade" class="control-label"></label>
            <input asp-for="Cidade" class="form-control" />
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UF" class="control-label"></label>
            <input asp-for="UF" class="form-control" />
            <span asp-validation-for="UF" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Disponivel" /> @Html.DisplayNameFor(model => model.Disponivel)
            </label>
        </div>
        <div class="form-group">
            <label class="control-label" id="form-texto">Formação</label>
            <select asp-for="CursoTipoId" class="form-control" asp-items="ViewBag.CursoTipos"></select>
            <span asp-validation-for="CursoTipo" class="text-danger"></span>
        </div>
        <div class="form-group text-center">
            <input type="submit" value="Salvar" class="btn btn-outline-oliva" />
            <a class="btn btn-outline-oliva" asp-action="Index">Retornar</a>
        </div>
    </form>
</div>


<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
