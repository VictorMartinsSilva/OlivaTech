@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUserCustom> SignInManager
@inject UserManager<IdentityUserCustom> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link-internal" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Olá @User.Identity.Name</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link-internal btn btn-link">Sair</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link-internal" asp-area="Identity" asp-page="/Account/Register">Cadastrar</a>
    </li>
    <li class="nav-item">
        <a class="nav-link-internal" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
    </li>
}
</ul>
