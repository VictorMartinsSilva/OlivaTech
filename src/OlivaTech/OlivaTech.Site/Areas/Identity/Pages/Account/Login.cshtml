@page
@model LoginModel

@{
    ViewData["Title"] = "Entrar";
}

<div class="card-internal card-center col-4 shadow">
    <div class="card-title-internal">
        <h2>Login</h2>
    </div>
    <form id="account" method="post"><hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-outline-oliva">entrar</button>
        </div>
        <div class="form-group text-center">
            <p>
                <a class="register" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registre-se</a>
            </p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
